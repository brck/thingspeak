<div class="row">
  <div class="col-sm-6 col-sm-offset-3 col-xs-12">

    <h4 class="bg-info"><%= t(:signup_header) %></h4>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <input name='userlogin' class='userlogin' />

      <div class="form-group">
        <%= f.text_field :login, :class => 'form-control', placeholder: t(:userid) %>
      </div>

      <div class="form-group">
        <%= f.text_field :email, :class => 'form-control', placeholder: t(:email) %>
      </div>

      <div class="form-group">
        <label><%= t(:time_zone) %></label>
        <div>
          <p class="form-control-static">
            <%= time_zone_select 'user', 'time_zone', nil, {:default => 'Eastern Time (US & Canada)'}, {:class => 'form-control'} %>
          </p>
        </div>
      </div>

      <div class="form-group">
        <%= f.password_field :password, :class => 'form-control', placeholder: t(:password) %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, :class => 'form-control', placeholder: t(:password_confirmation) %>
      </div>

      <div class="form-group">
        <p class="form-control-static">
          <%= f.submit t(:create_account), :id => "user_submit", :class => 'btn btn-primary' %>
        </p>
      </div>

    <% end %>
  </div>
</div>

<script type="text/javascript">
  document.getElementById('user_login').focus();
</script>
